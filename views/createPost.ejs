<%- include('parts/header') %>
<%- include('parts/navbar') %>


<header class="masthead mt-5 text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1 style="color: black;">Create New Post</h1>
          </div>
        </div>
      </div>
    </div>
  </header>
  
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <form action="/posts/store" method="POST" enctype="multipart/form-data">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label style="margin-left: 0;">Title</label>
              <input type="text" name="title" placeholder="Title" class="form-control" style="width: 100%; margin-left: 0%;">
            </div>
          </div>

          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label style="margin-left: 0;">Image</label>
              <input type="file" name="photo" class="form-control" accept="image/x-png,image/gif,image/jpeg,image/jpg" />
            </div>
          </div>

          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label style="margin-left: 0;">Content</label>
              <textarea name="content" placeholder="Content ..." cols="10" rows="10" class="form-control"></textarea>
            </div>
      
          </div>
          <div class="form-group my-4 text-center">
            <button class="btn btn-primary">Create</button>
          </div>
        </form>
      </div>
    </div>
  </div>

<%- include('parts/footer') %>
