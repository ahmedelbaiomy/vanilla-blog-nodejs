<%- include('parts/header') %>
<%- include('parts/navbar') %>


<div class="container mt-3 py-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-12">
            <% posts.forEach(post =>{ %>

                <div class="card mb-5">
                    <div class="row no-gutters  profile-div">
                        <div class="col-md-4 d-flex align-items-center justify-content-center">
                            <img src="<%= post.photo%>" class="card-img img-fluid mainImg" alt="blog image">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body mx-2 ">
                                <h4 class="card-title" style="color: #343a40;font-weight: bold;"><%= post.title %></h4>
                                <br><br>
                                <p class="card-text" style="color: #343a40;"><%= post.content %></p>
                                <div class="row  m-2 py-2">
                                    <div class=" col-2 ">
                                        <img src="images/profile.png" class="card-img img-fluid h-100" alt="blog image">
                                    </div>
                                    <div class=" col-10 mt-2 ">
                                        <h5>by <%= post.author.firstname + " "+ post.author.lastname %></h5>
                                        <p class="text-muted"><%= post.createdAt %></p>
                                    </div>
                                </div>
                                <% if(!post.author._id.equals(isLogged)){%>
                                    <form action="/auth/follow<%=post.author._id%>?_method=PUT" method="POST" class="text-center mt-3">
                                        <%if(post.author.follow){ %>
                                            <button class="btn  btn-outline btn-lg rounded-0 changeBtn btn-success" id="follow-btn" type="submit">Follow</button>
                                        <%} else{%>
                                            <button class="btn  btn-outline btn-lg rounded-0 changeBtn btn-danger" type="submit">UnFollow</button>
                                        <% } %>  
                                    </form>  
                                <%} %>  
                            </div>
                        </div>
                    </div>
                </div>
                <!-- <div class="row mb-5">
                    <div class="col-6">
                        <img class="text-center rounded" src="<%= post.photo%>" alt="Card image cap" width="100%" height="250px">
                    </div>
                    <div class="col-6 card mt-5" style="border:none !important;">
                        <h5 class="card-title"><%= post.title %></h5>
                        <p class="card-text"><%= post.content %></p>
                        <p class="text-muted"><%= post.createdAt %></p>
                        <p class="text-muted">by <%= post.author.firstname +" "+ post.author.lastname %></p>   
                    </div>
                </div> -->
            <%})%>
        </div>
    </div>   
</div>
 
<%- include('parts/footer') %>